    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:background="#636363"/>

    //上传语音
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickAudio">

        <ImageView
            android:layout_marginStart="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/mcphone4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="上传语音"
            android:textSize="18sp" />


    </LinearLayout>

    //上传语料
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickCorpus">

        <ImageView
            android:layout_marginStart="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/upload_corpus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="上传语料"
            android:textSize="18sp" />


    </LinearLayout>

    //本地知识库
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickBase">

        <ImageView
            android:layout_marginStart="32dp"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:background="@drawable/knowbase"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="本地知识库"
            android:textSize="18sp" />


    </LinearLayout>

    //个性化设置
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickConfig">

        <ImageView
            android:layout_marginStart="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/config"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="个性化设置"
            android:textSize="18sp" />


    </LinearLayout>
    //权限设置
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickPrivate">

        <ImageView
            android:layout_marginStart="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_private"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="权限设置"
            android:textSize="18sp" />


    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:background="#636363"/>
    //聊天记录
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
